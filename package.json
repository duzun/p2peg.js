{
  "name": "p2peg",
  "version": "0.3.8",
  "author": {
    "name": "Dumitru Uzun",
    "email": "contact@duzun.me",
    "url": "https://DUzun.Me/"
  },
  "homepage": "https://github.com/duzun/p2peg.js",
  "description": "Peer to Peer Entropy Generator (or Random numbers generator with p2p seeding)",
  "reveal": true,
  "keywords": [
    "P2P",
    "random",
    "entropy",
    "cryptography",
    "javascript",
    "PHP"
  ],
  "main": "./p2peg.js",
  "unpkg": "dist/p2peg.js",
  "files": [
    "dist/",
    "p2peg.js",
    "lib/"
  ],
  "directories": {
    "lib": "./lib",
    "doc": "./docs"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/duzun/p2peg.js.git"
  },
  "bugs": {
    "url": "https://github.com/duzun/p2peg.js/issues"
  },
  "license": "https://github.com/duzun/p2peg.js/raw/master/LICENSE",
  "readmeFilename": "README.md",
  "verup": {
    "files": [
      "package-lock.json",
      "p2peg.js",
      "README.md"
    ]
  },
  "scripts": {
    "test": "npm run test-node && npm run test-browser",
    "test-browser": "karma start ./spec/karma.conf.js --single-run",
    "test-node": "jasmine-node spec",
    "test:watch": "karma start ./spec/karma.conf.js",
    "jest": "npx jest --runInBand",
    "jest:cov": "npx jest --runInBand --forceExit --coverage",
    "jest:watch": "npx jest --runInBand --watch",
    "verup": "verup",
    "build": "node build.js",
    "doc": "docco p2peg.js"
  },
  "jshintConfig": {
    "browser": true,
    "laxbreak": true,
    "laxcomma": true,
    "undef": true,
    "unused": true,
    "sub": true,
    "expr": true,
    "bitwise": false,
    "eqeqeq": false,
    "boss": true,
    "eqnull": true,
    "scripturl": true,
    "-W041": false,
    "-W018": false
  },
  "devDependencies": {
    "docco": "^0.9.1",
    "gccs": "^1.3.2",
    "jasmine-node": "^3.0.0",
    "karma": "^6.3.17",
    "karma-chrome-launcher": "^3.1.0",
    "karma-firefox-launcher": "^2.1.2",
    "karma-ie-launcher": "1.x",
    "karma-jasmine": "^4.0.1",
    "karma-phantomjs-launcher": "1.x",
    "karma-requirejs": "1.x",
    "karma-safari-launcher": "1.x",
    "requirejs": "^2.3.6",
    "verup": "^1.7.1"
  }
}
